{
  "version": 2,
  "cleanUrls": true,
  "trailingSlash": false,

  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://aura-backend-ecommerce-app.vercel.app/api/$1"
    },
    {
      "source": "/((?!api/.*).*)",
      "destination": "/index.html"
    }
  ],

  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Credentials", "value": "true" },
        { "key": "Access-Control-Allow-Origin", "value": "https://aura-ecommerce-app.vercel.app" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, POST, PUT, DELETE, PATCH, OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type, Authorization, X-Requested-With" }
      ]
    }
  ],

  "redirects": [
    {
      "source": "/api",
      "destination": "https://aura-backend-ecommerce-app.vercel.app/api",
      "permanent": false
    }
  ]
}